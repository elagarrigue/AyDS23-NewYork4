<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:nestedScrollingEnabled="true"
    android:overScrollMode="always">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/newYorkTimesCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewNYT"
                        android:layout_width="wrap_content"
                        android:layout_height="58dp"
                        android:layout_margin="16dp"
                        android:contentDescription="The New York Times logo" />

                    <ScrollView
                        android:id="@+id/scrollViewNYT"
                        android:layout_width="match_parent"
                        android:layout_height="128dp"
                        android:layout_marginTop="16dp"
                        android:nestedScrollingEnabled="true">

                        <TextView
                            android:id="@+id/textPanelNYT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoLink="web"
                            android:linksClickable="true"
                            android:padding="16dp" />
                    </ScrollView>

                    <Button
                        android:id="@+id/openUrlButtonNYT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:text="Visit Full Article" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/wikipediaCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewWiki"
                        android:layout_width="wrap_content"
                        android:layout_height="58dp"
                        android:layout_margin="16dp"
                        android:contentDescription="Wikipedia logo" />

                    <ScrollView
                        android:id="@+id/scrollViewWiki"
                        android:layout_width="match_parent"
                        android:layout_height="128dp"
                        android:layout_marginTop="16dp"
                        android:nestedScrollingEnabled="true">

                        <TextView
                            android:id="@+id/textPanelWiki"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoLink="web"
                            android:linksClickable="true"
                            android:padding="16dp" />
                    </ScrollView>

                    <Button
                        android:id="@+id/openUrlButtonWiki"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Visit Full Article" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/lastFmCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageViewLF"
                        android:layout_width="wrap_content"
                        android:layout_height="58dp"
                        android:layout_margin="16dp"
                        android:contentDescription="LastFM logo" />

                    <ScrollView
                        android:id="@+id/scrollViewLF"
                        android:layout_width="match_parent"
                        android:layout_height="128dp"
                        android:layout_marginTop="16dp"
                        android:nestedScrollingEnabled="true">

                        <TextView
                            android:id="@+id/textPanelLF"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoLink="web"
                            android:linksClickable="true"
                            android:padding="16dp" />
                    </ScrollView>

                    <Button
                        android:id="@+id/openUrlButtonLF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Visit Full Article" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>